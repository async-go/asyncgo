%h1 New Team

= render partial: 'shared/form_errors', locals: { model: @team }

= form_with(model: @team, local: true) do |form|
  .mb-3
    .input-group
      .input-group-text
        = label(:team, :name)
      = form.text_field :name, class: 'form-control'

  = form.submit 'Create Team', class: 'btn btn-primary'
