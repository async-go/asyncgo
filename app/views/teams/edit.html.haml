%h1.visually-hidden Configuration for #{@team.name}

.row.mt-3
  .col.lg-12.my-3
    %h3 Invite users
    %p.lead Invite users to join your team.
    = form_with(model: User, url: [@team, :users],
      local: true, class: 'g-3') do |invite_user_form|
      .row
        .col-lg-10
          .input-group
            .input-group-text
              = invite_user_form.label :email
            = invite_user_form.text_field :email, class: 'form-control'
        .col-lg-2
          = invite_user_form.submit 'Invite User', class: 'btn btn-primary'

%hr

.row
  .col-lg-12
    %h3 Users in Team
    %p.lead Click to remove. If you want to remove yourself, have a team member do it for you.
    .row
      .list-group.list-group-horizontal-lg
        - @team_members.each do |user|
          .col-lg-3
            = link_to user.email, team_user_path(@team, user),
              method: :delete, class: 'list-group-item list-group-item-action text-center'
    .row.mt-3
      != pagy_bootstrap_nav(@pagy)

%hr

.row
  .col-lg-12
    %h3 Support/Feedback Form
    %p.lead Use this form to contact support and/or provide product feedback.
    = form_with(url: team_support_path(@team), local: true, class: 'g-3') do |support_form|
      .input-group.mb-3
        .input-group-text
          = support_form.label :body
        = support_form.text_area :body, rows: 4, class: 'form-control'

      = support_form.submit 'Send Email', class: 'btn btn-primary'

.row
  .col-lg-12
    %h3 Digest Notifications
    %p.lead
      Would you like to receive a daily digest email about open notifications?
      Note that setting impacts all teams.
    - if current_user.wants_digests
      %p Currently subscribed: Yes
    - else
      %p Currently subscribed: No
    = form_with(url: team_user_toggle_digests_path(current_user, @team),
      action: 'toggle_digests', id: current_user.id) do |toggle_digests_form|
      .input-group.mb-3
        = toggle_digests_form.submit 'Toggle notification status',
          class: 'list-group-item list-group-item-action active'
%hr
