- submit_action = topic.persisted? ? 'Update Topic' : 'Create Topic'
= form_with(model: topic, url: [topic.team, topic], local: true) do |form|
  - if user_field
    = form.hidden_field :user_id, value: current_user.id
  .mb-3
    = form.label :title
    = form.text_field :title, required: true, class: 'form-control'
  .mb-3
    = form.label :description
    = form.rich_text_area :description, required: true, class: 'form-control'
  .mb-3
    = form.label :outcome
    = form.rich_text_area :outcome, class: 'form-control'
  .mb-3
    = form.label :due_date
    = form.date_field :due_date, class: 'form-control'

  = form.submit submit_action, class: 'btn btn-primary'
