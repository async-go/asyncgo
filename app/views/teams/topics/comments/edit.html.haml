.row.my-5
  %h2= @topic.title

  = link_to 'Back', :back

  = render partial: 'shared/form_errors', locals: { model: @comment }

  = form_with(model: @comment, url: [@comment.topic.team, @comment.topic, @comment],
    local: true) do |form|
    .mb-3
      = render partial: 'shared/markdown_text_area', locals: { form: form, name: :body,
        options: { rows: '4', required: true, class: 'form-control autoresize' } }
    = form.submit 'Update Comment', class: 'btn btn-primary'

= javascript_pack_tag 'autoresize-textarea'