.row.my-5
  %h2= @topic.title

  = link_to 'Back to Topic', team_topic_path(@comment.topic.team, @comment.topic)

  = render partial: 'shared/form_errors', locals: { model: @comment }

  = form_with(model: @comment, url: [@comment.topic.team, @comment.topic, @comment],
    local: true) do |form|
    .mb-1
      = render partial: 'shared/toolbar_elements', locals: { text_area_name: 'comment_body' }
    .mb-3
      = form.text_area :body, rows: '4', required: true, class: 'form-control'

    = form.submit 'Update Comment', class: 'btn btn-primary'

= javascript_pack_tag 'markdown-toolbar', 'data-turbolinks-track': 'reload'
