.row.my-5
  %h2= @topic.title

  = link_to 'Back to Topic', team_topic_path(@comment.topic.team, @comment.topic)

  = render partial: 'shared/form_errors', locals: { model: @comment }

  = form_with(model: @comment, url: [@comment.topic.team, @comment.topic, @comment],
    local: true) do |form|
    .mb-3
      = form.label :body
      = form.rich_text_area :body, required: true, class: 'form-control'

    = form.submit 'Update Comment', class: 'btn btn-primary'
