- submit_action = comment.persisted? ? 'Update' : 'Add Comment'
= form_with(model: comment, url: [comment.topic.team, comment.topic, comment],
  data: { controller: 'reset-form toastui-editor',
  action: 'turbo:submit-end->reset-form#reset' }) do |form|
  = render partial: 'shared/form_errors', locals: { model: comment }
  .mb-1.visually-hidden
    = form.label :body
  .mb-3
    %div{ id: "editor_comment_#{comment.id || 'new'}", data: { 'toastui-editor-target': 'editor' } }
    = render partial: 'shared/markdown_text_area', locals: { form: form, name: :body,
      options: { rows: '5', hidden: true, class: 'form-control',
      data: { 'toastui-editor-target': 'textarea' } } }
    .d-none{ data: { 'toastui-editor-target': 'name' } } comment_#{submit_action}
  = form.submit submit_action, class: 'btn btn-primary', data: { 'toastui-editor-target': 'submit' }
